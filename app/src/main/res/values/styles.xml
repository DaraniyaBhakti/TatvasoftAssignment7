<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="cityNameDetail">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textSizeHeading</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/padding_15dp</item>
    </style>
    <style name="linearLayoutDetail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginStart">@dimen/margin_20dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_20dp</item>
        <item name="android:layout_marginTop">@dimen/padding_5dp</item>
        <item name="android:padding">@dimen/padding_10dp</item>
    </style>
    <style name="tvHeadingDetail">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/textSizeDescription</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tvDataDetails">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSizeDescription</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tvColonStyle">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_weight">0.1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSizeDescription</item>
        <item name="android:textColor">@color/black</item>

    </style>

</resources>